# EditorConfig: https://editorconfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# Matches multiple files with brace expansion notation
[*.{astro,ts,tsx}]
# Set default charset
charset = utf-8
indent_style = space
indent_size = 2

[*.sh]
charset = utf-8
indent_style = space
indent_size = 2
